{
    // "workspace" という名前のリモート開発環境の設定を示す
    "name": "spring-boot-ddd",

    // 使用される Docker Compose ファイルのリスト。この場合は "docker-compose.yml" というファイルを使用
    "dockerComposeFile": ["docker-compose.yml"],

    // "workspace" という名前のサービスを Docker Compose で実行
    "service": "workspace",

    // コンテナ内の VS Code のワークスペースのディレクトリを示す
    "workspaceFolder": "/home/kyoto_kanko/workspace",

    // コンテナ内のリモートユーザー名。この場合は "vscode" というユーザーを使用
    "remoteUser": "kyoto_kanko",

    // このリモート環境をシャットダウンする際のアクション。"stopCompose" は Docker Compose を停止することを示す
    "shutdownAction": "stopCompose",

    "customizations": {
        "vscode": {
            "settings": {
                "breadcrumbs.enabled": true,
                "editor.accessibilitySupport": "off",
                "editor.bracketPairColorization.enabled": true,
                "editor.cursorBlinking": "smooth",
                "editor.renderLineHighlight": "all",
                "editor.stickyScroll.enabled": true,
                "files.autoSave": "onFocusChange",
                "files.insertFinalNewline": true,
                "files.trimFinalNewlines": true,
                "files.trimTrailingWhitespace": true,
                "window.zoomLevel": 1,
                "workbench.editor.enablePreview": false,
                "workbench.editor.untitled.hint": "hidden",
                "workbench.iconTheme": "vscode-icons",
                "workbench.reduceMotion": "on",
                "workbench.startupEditor": "none"
            },
            "extensions": [
				"GitHub.copilot",
				"streetsidesoftware.code-spell-checker",
				"vscjava.vscode-gradle",
				"oderwat.indent-rainbow",
				"mosapride.zenkaku",
				"vscjava.vscode-lombok",
				"MS-CEINTL.vscode-language-pack-ja",
				"eamodio.gitlens",
				"vscjava.vscode-java-pack",
				"vscjava.vscode-spring-initializr",
				"vmware.vscode-spring-boot",
				"vscjava.vscode-spring-boot-dashboard"
			]
        }
    }
}
